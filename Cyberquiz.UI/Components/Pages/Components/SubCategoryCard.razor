@using Cyberquiz.Shared.DTOs
<h3>SubCategoryRow</h3>

<div class="subcategory-card card mb-3 shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
                <div class="d-flex align-items-center mb-2">
                    <span class="fs-4 me-2">@(SubCategory.IsLocked ? "🔒" : "🔓")</span>
                    <h5 class="mb-0">@SubCategory.Name</h5>
                </div>
                <small class="text-muted">Level: @SubCategory.Order</small>
            </div>

            <div class="ms-3">
                @if (SubCategory.IsCompleted)
                {
                    <span class="badge bg-success fs-6">
                        <i class="bi bi-check-circle-fill"></i> Completed
                    </span>
                }
                else if (!SubCategory.IsLocked)
                {
                    <button class="btn btn-primary" @onclick="() => OnStartQuiz.InvokeAsync(SubCategory.Id)">
                        <i class="bi bi-play-fill"></i> Start Quiz
                    </button>
                }
                else
                {
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-lock-fill"></i> Locked
                    </span>
                }
            </div>
        </div>
    </div>
</div>



@code {
    [Parameter]
    public SubCategoryDto SubCategory { get; set; }

    [Parameter]
    public EventCallback<int> OnStartQuiz { get; set; }
}
